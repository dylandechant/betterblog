<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<%= link_to new_user_post_path(@user), class: 'btn btn-default' do %>
<i class="glyphicon glyphicon-plus"></i> New Post
<% end %>

<%= link_to users_path(@user), class: 'btn btn-default' do %>
<i class="glyphicon glyphicon"></i> Users
<% end %>

<%= link_to :back, class: 'btn btn-default' do %>
<i class="glyphicon glyphicon"></i> Back
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><h3><%= post.title %></h3>
        <h5><%= post.created_at.strftime("%m/%d/%Y") %></h5></td>

      </tr>
      <tr>
        <td><%= link_to 'Show Post', user_post_path(@user, post.id) %> | 
        <%= link_to 'Edit Post', edit_user_post_path(@user, post.id) %> |
        <%= link_to 'Delete Post', user_post_path(post.user_id, post), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


